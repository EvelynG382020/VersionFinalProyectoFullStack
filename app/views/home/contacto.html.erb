<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <h3>Contáctame si desear mas información para registrate...</h3>
        <%= form_with(model: @contact) do |f| %>
          <% if @contact.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this owner from being saved:</h2>

              <ul>
              <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.label "Asunto" %>
          <%= f.text_field :title %>
          <%= f.label "Email" %>
          <%= f.text_field :email %>
          <%= f.label "Mensaje" %>
          <%= f.text_field :description %>
          <%= f.submit "Enviar tu mensaje" %>
        <% end %>
      </div>
    </div>
  </div>
</div>