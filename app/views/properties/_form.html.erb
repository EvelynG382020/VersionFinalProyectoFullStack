<%= form_with(model: property, remote: true, data: { confirm: '¿Desea confirmar?'}) do |form| %>
  
  

  <div class="field">
    <%= form.label :name, "Nombre descriptivo" %>
    <%= form.text_field :name, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :status, "Estado" %>
    <%= form.select :status, Property.statuses.keys, class: "form-control", autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :negotiation, "Forma de Pago" %>
    <%= form.select :negotiation, Property.negotiations.keys %>
  </div>

  <div class="field">
    <%= form.label :transaction_type, "Transacción" %>
    <%= form.select :transaction_type, Property.transaction_types.keys %>
  </div>

  <div class="field">
    <%= form.label :kind, "Tipo de propiedad" %>
    <%= form.select :kind, Property.kinds.keys %>
  </div>

  <div class="field">
    <%= form.label :adress, "Dirección" %>
    <%= form.text_field :adress, placeholder: "Ej: Los Ciruelos 444" %>
  </div>

  <div class="field">
    <%= form.label :location, "Comuna" %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :city, "Ciudad" %>
    <%= form.text_field :city, placeholder: "Ej: Región o ciudad" %>
  </div>
  <div class="field">
    <%= form.label :rol %>
    <%= form.text_field :rol %>
  </div>
  
  <div class="field">
    <%= form.label :owner_id, "Propietario" %>
    <%= form.collection_select :owner_id , Owner.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :detail, "Observaciones" %>
    <%= form.text_area :detail %>
  </div>

  <div class="field">
    <%= form.label :created_at %>
    <%= form.date_select :created_at %>
  </div>

  <div class="card-footer text-right">
    <%= link_to "Cancelar", properties_path, class: "btn btn-default" %>
    <%= form.submit data: { disable_with: 'Submiting...' }, class: "btn btn-primary" %>
  </div>
<% end %>         

