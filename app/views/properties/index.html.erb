<% if current_user.asistant? %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3 offset-md-2">
      <%= search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.label :status_eq, "Selecciona el estado del proceso" %>
      <br>
      <%= f.select :status_eq, options_for_select(Property.statuses , @q.status_eq), {},{class: "form-control"} %>
    </div>
    <br>
    <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<hr>

<h2>Propiedades</h2>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Estado</th>
      <th scope="col">Negociación</th>
      <th scope="col">Observaciones</th>
      <th scope="col">Tipo de Propiedad</th>
      <th scope="col">Dirección</th>
      <th scope="col">Rol</th>
      <th scope="col">Propietario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td scope="col"><%= property.name %></td>
        <td scope="col"><%= property.status %></td>
        <td scope="col"><%= property.negotiation %></td>
        <td scope="col"><%= property.detail %></td>
        <td scope="col"><%= property.kind %></td>
        <td scope="col"><%= property.adress %></td>
        <td scope="col"><%= property.rol %></td>
        <td scope="col"><%= property.name_owner %></td>
        
          <td><%= link_to 'Mostrar', property %></td>
          <td><%= link_to 'Editar', edit_property_path(property) %></td>
          <td><%= link_to 'Eliminar', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Propiedad', new_property_path %>
<% end %>
