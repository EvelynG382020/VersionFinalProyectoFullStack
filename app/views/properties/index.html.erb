
<p id="notice"><%= notice %></p>
<hr>
<form class="form-inline ">
  <div class="d-inline-block">
      <input class="form-control" type="search" placeholder="Buscar por Comuna" aria-label="Buscar" name="locationsearch"> 
  </div>
  <div class="d-inline-block">
      <button class="btn btn-dark" type="submit">Buscar</button>
      <%= link_to 'Todas', properties_path, class: "btn btn-warning" %>
  </div>
</form>
<hr>
<div class="row">
  <div class="col-md-3 offset-md-2">
      <%= search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.label :status_eq, "Estado " %>
      <%= f.select :status_eq, options_for_select(Property.statuses , @q.status_eq), {},{class: "form-control"} %> 
    </div>
      <%= f.submit "Buscar", class: "btn btn-dark" %>
      <%= link_to 'Todas', properties_path, class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
<hr>
<h2>Propiedades</h2>
<div class="table-responsive">
  <table class="table">
    <tbody>
      <tr>
        <td><%= link_to 'Nueva Propiedad', new_property_path, class: "btn btn-info" %></td>
        <td><%= link_to 'Index Propietarios', owners_path, class: "btn btn-info"  %></td>
        <td><%= link_to 'Procesos Cerrados', my_completeds_path, class: "btn btn-info" %></td>
      </tr>
    </tbody>
  </table>
</div>  
<hr>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th><%= sort_link(@q, :name, "Nombre Descriptivo") %></th>
        <th>Estado</th>
        <th><%= sort_link(@q, :negotiation, 'Negociación') %></th>
        <th><%= sort_link(@q, :transaction_type, 'Transacción') %></th>
        <th><%= sort_link(@q, :kind, 'Tipo de propiedad') %></th>
        <th>Dirección</th>
        <th>Comuna</th>
        <th>Ciudad</th>
        <th>Rol</th>
        <th>Nombre Propietario</th>
        <th>Observaciones</th>
        <th>Fecha de registro</th>
      </tr>  
    </thead>
    <tbody id="myProperty">
      <%= render @properties%>
    </tbody>
  </table> 
</div> 
<br>
