<h1>Owners</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tel√©fono</th>
      <th>Rut</th>
      <th>Mail</th>
      <th>Total propiedades</th>
      <th>Comprador</th>
      <th>Arrendatario</th>
      <th>Propiedades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.rut %></td>
        <td><%= owner.mail %></td>
        <td><%= owner.total_property %></td>
        <td><%= owner.buyers.pluck(:name).join(',') %></td>
        <td><%= owner.renters.pluck(:name).join(',') %></td>
        <td><%= owner.properties.pluck(:name).join(', ') %></td>
        <td><%= link_to 'like', like_owner_path(owner), method: :put  %></td>
          
           
        <td><%= link_to 'dislike', dislike_owner_path(owner), method: :put %></td> 
        
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

