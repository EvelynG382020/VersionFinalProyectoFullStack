<%= form_with(model: owner, remote: true, data: { confirm: '¿Desea confirmar?'}) do |form| %>
  <% if owner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

      <ul>
      <% owner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :phone, "Teléfono contacto" %>
    <%= form.text_field :phone, placeholder: "+56912345678" %>
  </div>

  <div class="field">
    <%= form.label :rut %>
    <%= form.text_field :rut, placeholder: "11.111.111-1" %>
  </div>

  <div class="field">
    <%= form.label :mail %>
    <%= form.text_field :mail, placeholder: "example@example.com" %>
  </div>
  
  <div class="field">
    <%= form.label :created_at %>
    <%= form.date_select :created_at %>
  </div>

  <div class="actions">
    <%= form.submit "Crear" %>
  </div>
  <div class="card-footer text-right">
    <%= link_to "Cancelar", owners_path, class: "btn btn-default" %>
    <%= form.submit "Crear Propietario", data: {disable_with: "Creando"}, class: "btn btn-primary" %>
  </div>
<% end %>
